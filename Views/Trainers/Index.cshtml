@model IEnumerable<TrainingMVCProject.Models.Trainer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>TRAINER</h2>
@using (Html.BeginForm())
{
    <p>
        Find by name: @Html.TextBox("searchString", null, new { @class = "form-control mr-sm-2" })
        <input type="submit" value="Search" class="btn btn-light" />
    </p>}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TrainerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrainerWorkingPlace)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrainerPhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrainerEmail)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TrainerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrainerWorkingPlace)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrainerPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrainerEmail)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.TrainerID }) |
                @Html.ActionLink("Details", "Details", new { id = item.TrainerID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.TrainerID })
            </td>
        </tr>
    }

</table>
