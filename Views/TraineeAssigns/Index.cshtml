@model IEnumerable<TrainingMVCProject.Models.TraineeAssign>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
@using (Html.BeginForm())
{
    <p>
        Find by name: @Html.TextBox("searchString", null, new { @class = "form-control mr-sm-2" })
        <input type="submit" value="Search" class="btn btn-light" />
    </p>}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Course.CourseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Trainee.TraineeName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Course.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trainee.TraineeName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.TraineeAssignID }) |
                @Html.ActionLink("Details", "Details", new { id = item.TraineeAssignID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.TraineeAssignID })
            </td>
        </tr>
    }

</table>
